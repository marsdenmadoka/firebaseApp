<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:contentDescription="click to add image"
        android:id="@+id/imageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#00ffff"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/imagephoto" />

    <EditText
        android:id="@+id/EditTxt1"
        android:inputType="text"
        android:layout_marginTop="10dp"
        android:hint="@string/add_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton"
        />
    <EditText
        android:inputType="text"
        android:id="@+id/EditTxt2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:hint="@string/add_description"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditTxt1"
        android:autofillHints="" />
    <Button
        android:id="@+id/buttonB"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/EditTxt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="SendDataToFirebase" />


